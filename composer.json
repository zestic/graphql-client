{
  "name": "zestic/graphql-client",
  "description": "A simple client to help execute queries and mutations across GraphQL",
  "keywords": ["graphql", "client", "php"],
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Carl Knowles",
      "email": "carl.knowles@euautomation.com"
    },
    {
      "name": "Rob Wells",
      "email": "rob.wells@euautomation.com"
    }
  ],
  "require" : {
    "guzzlehttp/guzzle": "^6.2|^7.2"
  },
  "require-dev": {
    "ext-json": "*",
    "mockery/mockery": "dev-master",
    "pestphp/pest": "^2.30"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "EUAutomation\\GraphQL\\": "src/"
    }
  },
  "autoload-dev":{
    "psr-4":{
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
